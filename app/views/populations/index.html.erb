<p id="notice"><%= notice %></p>

<h1>Populations</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Country</th>
      <th>Continent</th>
      <th>Population</th>
      <th>Rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @populations.each do |population| %>
      <tr>
        <td><%= population.year %></td>
        <td><%= population.country %></td>
        <td><%= population.continent %></td>
        <td><%= population.population %></td>
        <td><%= population.rank %></td>
        <td><%= link_to 'Show', population %></td>
        <td><%= link_to 'Edit', edit_population_path(population) %></td>
        <td><%= link_to 'Destroy', population, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Population', new_population_path %>||
<%= link_to "Upload File", :controller => '/populations', :action => "upload" %>||
<%= link_to "Delete All", :controller => '/populations', :action => "delete_all" %>||
